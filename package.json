    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "dotenv": "10.0.0",
    "express": "^4.18.2",
    "mysql2": "^2.3.3",
    "sequelize": "^6.31.1"
  }
